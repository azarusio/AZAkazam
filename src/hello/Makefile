#******************************************************************************#
#       Compiler configuration                                                 #
#******************************************************************************#
CXX			:= eosio-cpp
CXXFLAGS	:= -Wall -O3 -fcolor-diagnostics -finline-functions -lto-opt=O3 -abigen

#******************************************************************************#
#       Makefile variables                                                     #
#******************************************************************************#
targets		:= hello.wasm hello.abi

#******************************************************************************#
#       Makefile targets                                                       #
#******************************************************************************#
.SUFFIXES:
.PHONY: clean distclean mostlyclean maintainer-clean

all: $(targets)

%.wasm: %.cpp
	$(CXX) $(CXXFLAGS) -c $? -o $@

clean:
	-rm -f $(targets)

distclean:
	-rm -f $(targets)

mostlyclean:
	-rm -f $(targets)

maintainer-clean:
	-rm -f $(targets)

################################################################################
#                                 END OF FILE                                  #
